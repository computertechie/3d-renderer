{
  "description" : "A fully compiled and linked shader program (a rendering process).",
  "id" : "ShaderProgram",
  "type" : "object",
  "properties" : {
    "renderProcessName": {
      "type": "string"
    },
    "vertexShaderFile" : {
      "type" : "string"
    },
    "fragmentShaderFile" : {
      "type" : "string"
    },
    "vertexShaderID": {
      "type": "integer"
    },
    "fragmentShaderID": {
      "type": "integer"
    },
    "programID": {
      "type": "integer"
    },
    "projectionMatrixLocation": {
      "type": "integer"
    },
    "viewMatrixLocation": {
      "type": "integer"
    },
    "modelMatrixLocation": {
      "type": "integer"
    },
    "stride" : {
      "type" : "integer"
    },
    "vertexAttributes" : {
      "type" : "array",
      "items" : {
        "$ref" : "Attribute.json"
      }
    },
    "uniformAttributes" : {
      "$ref" : "map_string_integer.json"
    }
  }
}